{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "@biblioteca-api-url"
  },
  "functions": {
    "frontend/app/api/**/*.js": {
      "maxDuration": 10
    }
  }
} 